<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/my_nestedScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/my_hide"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/toolkit_solid"/>

                        <!-- 在这里放入activity的具体内容 -->
                        <include layout="@layout/my_content"/>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <!-- 标题栏 -->
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/my_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-8dp"
                    app:contentInsetStart="0dp">
                    <LinearLayout
                        android:id="@+id/my_toolbar_ly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@android:color/transparent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp">
                            <ImageView
                                android:id="@+id/my_sign_image"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/my_logout"/>
                            <TextView
                                android:id="@+id/my_sign_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="退出"
                                android:textSize="10sp"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="10dp">
                            <LinearLayout
                                android:id="@+id/my_switch_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:layout_toLeftOf="@id/my_kefu_layout"
                                android:layout_centerVertical="true">
                                <ImageView
                                    android:id="@+id/my_switch_image"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/hp_switch_black"/>
                                <TextView
                                    android:id="@+id/my_switch_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="版本"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/my_kefu_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:layout_marginLeft="20dp"
                                android:layout_toLeftOf="@id/my_msg_layout"
                                android:layout_centerVertical="true">
                                <ImageView
                                    android:id="@+id/my_kefu_image"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/hp_kefu_black"/>
                                <TextView
                                    android:id="@+id/my_kefu_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="客服"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/my_msg_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:layout_marginLeft="20dp"
                                android:layout_toLeftOf="@id/my_setting_layout"
                                android:layout_centerVertical="true">
                                <ImageView
                                    android:id="@+id/my_msg_image"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/hp_msg_black"/>
                                <TextView
                                    android:id="@+id/my_msg_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="消息"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/my_setting_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:layout_marginLeft="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true">
                                <ImageView
                                    android:id="@+id/my_setting_image"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/my_setting"/>
                                <TextView
                                    android:id="@+id/my_setting_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="设置"
                                    android:textColor="@color/black"
                                    android:textSize="10sp"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>
            </FrameLayout>

            <!-- 底部导航栏 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/hp_devidingline3"/>
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/my_navbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingLeft="21dp"
                    android:paddingRight="21dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    app:flexDirection="row"
                    app:justifyContent="space_between">
                    <LinearLayout
                        android:id="@+id/my_below_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hp_below_main"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="首页"
                            android:textSize="10sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/my_below_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hp_below_money"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="财富"
                            android:textSize="10sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/my_below_life"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hp_below_life"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="生活"
                            android:textSize="10sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/my_below_farmer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hp_below_farmer"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="兴农"
                            android:textSize="10sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/my_below_my"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hp_below_my_selected"/>
                        <TextView
                            android:id="@+id/my_below_my_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>