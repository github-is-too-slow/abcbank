<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingLeft="15dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">
            <TextView
                android:id="@+id/ds_transaction_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工资"
                android:textSize="16sp"
                android:textColor="@color/ds_item_type"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxEms="7"/>

            <TextView
                android:id="@+id/ds_transaction_money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:text="+1785.00"
                android:textSize="16sp"
                android:textColor="@color/ds_item_type"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/ds_transaction_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1970-01-01 00:00:00"
                android:textSize="14sp"
                android:textColor="@color/ds_item_time"/>
            <TextView
                android:id="@+id/ds_left_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="1785.00"
                android:textSize="14sp"
                android:textColor="@color/ds_item_time" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ds_more_right_arrow"
        android:adjustViewBounds="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"/>
</LinearLayout>